{
    "name": "simplevfs",
    "description": "Minimalist virtual file system for game development",
    "copyright": "Copyright © 2011-2014, Ferdinand Majerech",
    "authors": [
        "Ferdinand Majerech",
        "Luis Panadero Guardeño"
    ],
    "importPaths": ["source"],
    "license": "Boost 1.0",
    "homepage": "https://github.com/Zardoz89/SimpleVFS",
    "configurations": [
        {
            "name": "simplevfs",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "library",
            "importPaths": ["source", "tests"],
            "sourcePaths": ["source", "tests"],
            "dependencies": {
                "silly": "~>1.0.2",
                "pijamas": "~>0.3.4"
            }
        }
    ],
    "buildTypes": {
        "docs": {
            "buildOptions": [
                "syntaxOnly"
            ],
            "dflags": [
                "-c",
                "-Dddocs"
            ],
            "dflags-dmd": [
                "-preview=markdown"
            ]
        }
    },
    "subPackages": [
      "examples/getting_started",
      "examples/vfsfile"
    ],
    "toolchainRequirements": {
        "dub": ">=1.19.0",
        "frontend": ">=2.090"
    }
}

